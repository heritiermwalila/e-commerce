<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/product.css">
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
    <main>
       
        <form action="/admin/<%= editing ? 'edit-product/' : 'add-product/' %>" method="POST" class="add-form">
        <% if(editing) {%>
            <input type="hidden" value="<%=product.id %>" name="productId">
        <%}%>
        
            <h1>add product</h1>
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="name" id="title" value="<%=editing ? product.name : ''%>">
            </div>  
            <div class="form-control">
                <label for="product-image">Product Image</label>
                <input type="file" name="imageUrl" id="product-image">
            </div>  
             
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" value="<%= editing ? product.price : '' %>" step="0.01">
            </div>  
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="4" class=""><%= editing ? product.description : ''%></textarea>
            </div> 
            
            
            <button type="submit" class="btn"><%= editing ? 'Edit' : 'Save' %> product</button>

        </form>
        
    </main>
<%- include('../includes/footer.ejs') %>