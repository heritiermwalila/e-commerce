<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/shop.css">
    
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <h1>All my products</h1>
        <span>List of all my products</span>
        <% if(prods.length > 0) {%>
        <div class="grid">
            <% for(let product of prods){%>
            <article class="card product-item">
                <header class="card-title">
                    <h4 class="product_title">
                        <%=product.name%>
                    </h4>
                    <div class="card_image">
                        <img src="https://picsum.photos/360x200" alt="">
                    </div>
                    <div class="card_content">
                        <h2 class="product_price">R<%=product.price%></h2>
                        <p><%=product.description%></p>
                    </div>
                    <div class="card_actions">
                        <a class="btn" href="/admin/edit-product/<%=product.id%>?edit=true">Edit product</a>
                        <form action="/admin/delete-product" method="POST">
                            <input type="hidden" name="productId" value="<%=product.id%>">
                            <button type="submit" class="btn">Delete</button>
                        </form>
                    </div>
                </header>
            </article>
            <%}%>
        </div>
        <% } else { %>
            <h1>No product available</h1>
        <% } %>
    </main>
<%- include('../includes/footer.ejs') %>